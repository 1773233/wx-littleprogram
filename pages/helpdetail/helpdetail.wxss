/* pages/helpdetail/helpdetail.wxss */
page{
  background-color: #f5f5f5;
}
.wraper{
  width: 100%;
  height: auto;
  background-color: #fff;
}
.wraper .title{
  font-size: 30rpx;
  color: #000;
  line-height: 100rpx;
  text-indent: 20rpx;
  width: 100%;
  height: 100rpx;
  text-align: center;
  margin-bottom: 20rpx;
  background-color: #fff;
}
.content{
  padding-left: 2%;
  width: 96%;
  height: auto;
  letter-spacing: 2rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 40rpx;
  background-color: #fff;
}
.btnwrap{
  width: 100%;
  height: 90rpx;
  margin-top: 50rpx;
  text-align: center;
  background-color: #fff;
}
.btns{
  display: inline-block;
  height:90rpx;
  background-color: #fff;
}
.btnitem{
  width: 200rpx;
  height: 70rpx;
  border: 1rpx solid #fe8b03;
  float: left;
}
.btnitem image{
  width: 40rpx;
  height: 40rpx;
  margin-top: 15rpx;
  margin-left: 10rpx;
}
.btnitem .words{
  display: inline-block;
  font-size: 28rpx;
  line-height: 70rpx;
  margin-left: 20rpx;
  color: #fe8b03;
  vertical-align: top;
}
.btnitem.left{
  float: left;
  border-color: #ddd;
  margin-left: 50rpx;
}
.btnitem.left .words{
  color: #999;
}
.clearfloat{
  clear: both;
}
.noaddress{
  display: none;
}
.noaddress.active{
  display: block;
}
.nodata{
  width: 100%;
  height: 60vh;
  text-align: center;
}
.nodata image{
  width: 180rpx;
  height: 200rpx;
  margin-top: 30vh;
}
.nodata .tipinfo{
  font-size: 28rpx;
  color: #999;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  text-align: center;
}