/* pages/setting/setting.wxss */
.wraper{
  width: 100%;
  height: 100vh;
  background-color: #FAFAFA;
  overflow: hidden;
}
.item2{
  -webkit-box-flex:2;
  -webkit-flex:2;
  flex:2;
  text-align: center;
  padding: 0px;
}
.item3{
  -webkit-box-flex:3;
  -webkit-flex:3;
  flex:3;
  text-align: center;
  padding: 0px;
}
.item4{
  -webkit-box-flex:4;
  -webkit-flex:4;
  flex:4;
  text-align: center;
  padding: 0px;
}
.item5{
  -webkit-box-flex:5;
  -webkit-flex:5;
  flex:5;
  text-align: center;
  padding: 0px;
}
.item6{
  -webkit-box-flex:6;
  -webkit-flex:6;
  flex:6;
  text-align: center;
  padding: 0px;
}
.funcionwrap{
  width: 100%;
  margin-top: 40rpx;
  box-shadow: 0px 0px 5px #ddd;
}
.funcionwrap .weui-flex{
  height: 100rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}
.funcionwrap .weui-flex.margin30{
  margin-top: 30rpx;
}
.funcionwrap .weui-flex.bordernone{
  border: none;
}
.title{
  text-align: left;
  text-indent: 20rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #333;
}
.value{
  font-size: 28rpx;
  line-height: 100rpx;
  text-align: right;
  color: #999;
}
.arrowright{
  width: 12rpx;
  height:26rpx;
  margin-top: 24rpx;
  float: right;
  margin-right: 15rpx;
}
.arrowright image{
  width: 100%;
  height: 100%;
}
.btn{
  width: 90%;
  margin-left: 5%;
  height: 90rpx;
  margin-top: 50rpx;
}
.btn .logout{
  width: 100%;
  height: 100%;
  line-height: 90rpx;
  text-align:center;
  color: #33CCCC;
  background-color: white;
  border: none;
  font-size: 26rpx;
  border-radius: 15rpx;
  box-shadow: 0px 0px 5px 1px #ddd;
}