/* pages/getuserinfo/getuserinfo.wxss */
.loguserinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  clear: both;
  margin-top: 100rpx;
}
.logtitle{
  width: 100%;
  height: 300rpx;
  text-align: center;
}
.logtitle image{
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
}
.logtitle .logappname{
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  line-height: 100rpx;
}
.logtips{
  font-size: 28rpx;
  color: #999;
  line-height: 50rpx;
}
.loggetuserinfo{
  display: inline-block;
  font-size: 30rpx;
  color: #fff;
  padding: 10rpx 30rpx;
  background-color: #1aad19;
}