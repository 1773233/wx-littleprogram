/* pages/becomerider/becomerider.wxss */
.wraper{
  width: 100%;
  height: auto;
  padding-top: 30rpx;
  padding-bottom: 20rpx;
  background-color:#131426;
}
.item1hf{
  -webkit-box-flex:1.5;
  -webkit-flex:1.5;
  flex:1.5;
  padding: 0px;
}
.item2{
  -webkit-box-flex:2;
  -webkit-flex:2;
  flex:2;
}
.item3{
  -webkit-box-flex:3;
  -webkit-flex:3;
  flex:3;
}
.item4{
  -webkit-box-flex:4;
  -webkit-flex:4;
  flex:4;
}
.item5{
  -webkit-box-flex:5;
  -webkit-flex:5;
  flex:5;
}
.item6{
  -webkit-box-flex:6;
  -webkit-flex:6;
  flex:6;
}
.itemsm{
  -webkit-box-flex:.3;
  -webkit-flex:.3;
  flex:.3;
}
.wraper .progress{
  width: 90%;
  margin-left: 5%;
  height: 150rpx;
  position: relative;
}
.wraper .progress .background{
  position: absolute;
  width: 100%;
  height: 15rpx;
  top: 18rpx;
  border-radius: 15rpx;
  background-color: #fff;
}
.wraper .progress .progressbarpoint{
  position: relative;
  z-index: 998;
}
.wraper .progress .progressitem{
  text-align: center;
  height: 150rpx;
  position: relative;
}
.wraper .progress .progressitem image{
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  position: absolute;
  left: 50%;
  top: 0rpx;
  margin-left: -20rpx;
}
.wraper .progress .progressitem .progressstep{
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  position: relative;
  left: 50%;
  margin-left: -20rpx;
  top: 0rpx;
  z-index: 999;
}
.wraper .progress .progressitem .progressstepname{
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  font-size: 28rpx;
}
.wraper .infowrap{
  width: 90%;
  margin-left: 5%;
  background-color: #fff;
  margin-top: 30rpx;
  padding-bottom: 30rpx;
  border: 1rpx solid #fff;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}
.wraper .useravatar{
  width: 100rpx;
  height: 100rpx;
  margin:0 auto; 
  margin-top: -50rpx;
}
.wraper .useravatar image{
  width: 100%;
  height: 100%;
  border-radius: 50rpx;
}
.wraper .tipmessage{
  font-size: 24rpx;
  color: #FF6666;
  line-height: 40rpx;
  margin-top: 20rpx;
  padding-left: 20rpx;
  margin-bottom: 20rpx;
}
.wraper .nesscery{
   color: #FF6666;
   margin-right: 5rpx;
}
.wraper .infowrap .weui-flex{
  border-bottom: 1px solid #eee;
}
.wraper .title{
  padding-left: 20rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #333;
}
.wraper input{
  width: 100%;
  height: 100%;
  line-height:90rpx;
  border: none;
  outline: none;
  font-size: 26rpx;
  text-align: left;
  color:#666;
  padding-left: 20rpx;
}
.wraper .sex{
  width:100rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 25rpx;
  float: left;
  text-align: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.wraper .sex image{
  float: left;
  width: 40rpx;
  height: 40rpx;
}
.wraper .sex text{
  font-size: 28rpx;
  color: #000;
}
.wraper .holderclass{
  text-align: left;
}
.wraper .placeholderstyle{
  color: #999;
  font-size: 26rpx;
  line-height: 90rpx;
  text-align: left;
  padding-left: 20rpx;
}
.wraper .pics{
  width: 90%;
  height: 220rpx;
  box-sizing: border-box;
  border: 2rpx dashed #ddd;
  text-align: center;
  border-radius: 20rpx;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
}
.wraper .example{
  margin-left: 10%;
  border-bottom-right-radius: 0rpx;
  border-top-right-radius: 0rpx;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius:20rpx;
  background-color:#fff;
  text-align: center;
}
.wraper .example .default{
  width:70%;
  height: 70%;
  margin-top: 15%;
}
.wraper .pics image.selected{
  width: 100%;
  height: 100%;
  margin: 0rpx;
}
.wraper .widthbot{
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ddd;
}
.wraper .infowrap .bordernone{
  border: none;
}
.arrowright{
  width: 12rpx;
  height:26rpx;
  margin-top: 15rpx;
  float: right;
  margin-right: 15rpx;
}
.arrowright image{
  width: 100%;
  height: 100%;
}

.btn{
  width: 100%;
  margin-top: 60rpx;
  height: 90rpx;
}
.btn .submit{
  width: 380rpx;
  height: 90rpx;
  background-color: #131426;
  border-radius: 10rpx;
  color: #fff;
  font-size: 28rpx;
  position: relative;
  line-height: 90rpx;
  text-align: center;
  margin: 0 auto;
}
.btn .submit image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0px;
  left: 0px;
}
.btn .submit text{
  position: relative;
  width: 100%;
  height: 100%;
  display: block;
  text-align: center;
  line-height: 94rpx;
  font-size: 28rpx;
  color: #000;
}
text.logname{
  font-size: 30rpx;
  line-height: 90rpx;
  color: #666;
  text-align: left;
  padding-left: 20rpx;
}
.wraper picker.light{
  color: #666;
}