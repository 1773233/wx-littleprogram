/* pages/cardmanage/cardmanage.wxss */
page{
  background-color: #f5f5f5;
}
.wraper{
  width: 100%;
  height: auto;
  padding-bottom: 100rpx;
  background-color: #f5f5f5;
}
.item2{
  -webkit-box-flex:2;
  -webkit-flex:2;
  flex:2;
  text-align: center;
  padding: 0px;
}
.item3{
  -webkit-box-flex:3;
  -webkit-flex:3;
  flex:3;
  text-align: center;
  padding: 0px;
}
.item4{
  -webkit-box-flex:4;
  -webkit-flex:4;
  flex:4;
  text-align: center;
  padding: 0px;
}
.item5{
  -webkit-box-flex:5;
  -webkit-flex:5;
  flex:5;
  text-align: center;
  padding: 0px;
}
.item6{
  -webkit-box-flex:6;
  -webkit-flex:6;
  flex:6;
  text-align: center;
  padding: 0px;
}
.arrowright{
  width: 12rpx;
  height:26rpx;
  margin-top: 70rpx;
  float: right;
  margin-right: 50rpx;
}
.arrowright image{
  width: 100%;
  height: 100%;
}
.select{
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  margin-top: 70rpx;
  float: right;
  margin-right: 50rpx;
}
.select image{
  width: 100%;
  height: 100%;
}
.nav{
  width: 100%;
  height: 80rpx;
  background-color: #131426;
  text-align: right;
  margin-bottom: 20rpx;
  box-shadow: 0px 1rpx 5rpx 1rpx #eee;
}
.nav .jl{
  color: #fff;
  font-size: 30rpx;
  letter-spacing: 2rpx;
  line-height: 80rpx;
  padding-right: 50rpx;
}
.nav .jl image{
  width: 40rpx;
  height: 40rpx;
}
.cardlist{
  width: 100%;
  height: auto;
}
.cardlist .blockbig{
  width: 100%;
  height: 200rpx;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}
.cardlist .icon{
  width: 100%;
  height: 200rpx;
  text-align: left;
}
.cardlist .icon image{
  width: 80rpx;
  height: 80rpx;
  margin-top: 60rpx;
  margin-left: 20rpx;
}
.cardlist .bankname{
  height: 100rpx;
  line-height: 140rpx;
  color: #000;
  font-size: 32rpx;
  text-align: left;
}
.cardlist .carddesc{
  height: 100rpx;
  line-height: 60rpx;
  color: #666;
  font-size: 30rpx;
  text-align: left;
}
.btn{
  width: 80%;
  height: 100rpx;
  border-radius: 5rpx;
  background-color: #131426;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
  margin-left: 10%;
  margin-top: 80rpx;
}
.nodata{
  width: 100%;
  height: 60vh;
  text-align: center;
}
.nodata image{
  width: 140rpx;
  height: 150rpx;
  margin-top: 30vh;
  border-radius: 50rpx;
}
.nodata .tipinfo{
  font-size: 28rpx;
  color: #999;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  text-align: center;
}
.reson{
  font-size: 30rpx;
  color: #fe8b03;
  line-height: 60rpx;
  text-indent: 20rpx;
}