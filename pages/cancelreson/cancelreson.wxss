/* pages/cancelreson/cancelreson.wxss */
.wraper{
  width: 100%;
  height: 100vh;
  overflow: hidden;
  box-sizing:border-box;
  background-color: #f5f5f5;
  position: relative;
}
.item2{
  -webkit-box-flex:2;
  -webkit-flex:2;
  flex:2;
}
.item3{
  -webkit-box-flex:3;
  -webkit-flex:3;
  flex:3;
}
.item4{
  -webkit-box-flex:4;
  -webkit-flex:4;
  flex:4;
}
.item5{
  -webkit-box-flex:5;
  -webkit-flex:5;
  flex:5;
}
.item6{
  -webkit-box-flex:6;
  -webkit-flex:6;
  flex:6;
}
.item7{
  -webkit-box-flex:7;
  -webkit-flex:7;
  flex:7;
  padding: 0px;
}
.item8{
  -webkit-box-flex:8;
  -webkit-flex:8;
  flex:8;
}
.wraper .title{
  font-size: 60rpx;
  margin-top: 20rpx;
  line-height: 60rpx;
  margin-bottom: 40rpx;
  color: #333;
  font-weight: bold;
  text-align: left;
  text-indent: 40rpx;
}
.wraper .resons{
  width:100%;
  height: auto;
}
.wraper .itemtitle{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #555;
  font-weight: bold;
  text-indent: 40rpx;
  text-align: left;
}
.wraper .cicon{
  width: 100%;
  height: 100rpx;
  text-align: center;
}
.wraper .cicon image{
  width: 40rpx;
  height: 40rpx;
  margin-top: 30rpx;
}
.wraper .resoncontent{
  width: 90%;
  margin-left: 5%;
  height: 250rpx;
  margin-top: 50rpx;
  margin-bottom: 100rpx;
}
.wraper .contentvalue{
  width: 100%;
  height: 200rpx;
  border: none;
  background-color: #fff;
  color: #666;
  line-height: 40rpx;
  font-size: 28rpx;
  padding: 10rpx;
}
.wraper .hoderstyle{
  color: #999;
  font-size:28rpx;
  line-height: 40rpx;
}
.wraper .btns{
  width: 100%;
  height: 100rpx;
}
.wraper .btn{
  height: 100rpx;
}
.wraper .btn .btncontent{
  width: 80%;
  margin-left: 10%;
  height: 100rpx;
  border-radius: 50rpx;
  line-height: 100rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  background-color: #131426;
}
.wraper .btn .back{
  color: #666;
  background-color: #fff;
}