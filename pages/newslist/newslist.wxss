/* pages/newslist/newslist.wxss */
page{
  background-color: #f5f5f5;
}
.wraper{
  width: 100%;
  overflow: hidden;
  padding-bottom: 20rpx;
}
.item2{
  -webkit-box-flex:2;
  -webkit-flex:2;
  flex:2;
}
.item3{
  -webkit-box-flex:3;
  -webkit-flex:3;
  flex:3;
}
.item4{
  -webkit-box-flex:4;
  -webkit-flex:4;
  flex:4;
}
.item5{
  -webkit-box-flex:5;
  -webkit-flex:5;
  flex:5;
}
.item6{
  -webkit-box-flex:6;
  -webkit-flex:6;
  flex:6;
}
.itemhf{
  -webkit-box-flex:.5;
  -webkit-flex:.5;
  flex:.5;
}
.wraper .newsitem{
  width: 90%;
  margin-left: 5%;
  border-radius: 15rpx;
  height: auto;
  box-sizing: border-box;
  margin-top: 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}
.wraper .toptit{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}
.wraper .toptit .point{
  width: 26rpx;
  height: 26rpx;
  margin:0 auto;
  margin-top: 27rpx;
  border-radius: 13rpx;
}
.wraper .toptit .point.orange{
  background-color: #fe8b03;
}
.wraper .toptit .point.dark{
  background-color: #131426;
}
.wraper .name{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #333;
  font-family: "黑体";
}
.wraper .tr{
  text-align: right;
}
.wraper .date{
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #999;
  margin-right: 20rpx;
  font-family: "黑体";
}
.wraper .desc{
  width: 90%;
  color: #999;
  margin-left: 5%;
  box-sizing: border-box;
  line-height: 40rpx;
  font-size: 26rpx;
  margin-bottom: 20rpx;
}
.nodata{
  width: 100%;
  height: 60vh;
  text-align: center;
}
.nodata image{
  width: 180rpx;
  height: 200rpx;
  margin-top: 30vh;
}
.nodata .tipinfo{
  font-size: 28rpx;
  color: #999;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  text-align: center;
}