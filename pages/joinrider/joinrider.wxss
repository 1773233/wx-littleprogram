/* pages/joinrider/joinrider.wxss */
.wraper{
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background-color: #fff;
}
.item2{
  -webkit-box-flex:2;
  -webkit-flex:2;
  flex:2;
  text-align: center;
  padding: 0px;
}
.item3{
  -webkit-box-flex:3;
  -webkit-flex:3;
  flex:3;
  text-align: center;
  padding: 0px;
}
.item4{
  -webkit-box-flex:4;
  -webkit-flex:4;
  flex:4;
  text-align: center;
  padding: 0px;
}
.item5{
  -webkit-box-flex:5;
  -webkit-flex:5;
  flex:5;
  text-align: center;
  padding: 0px;
}
.item6{
  -webkit-box-flex:6;
  -webkit-flex:6;
  flex:6;
  text-align: center;
  padding: 0px;
}
.back{
  width: 100%;
  height: 100vh;
  position: absolute;
  z-index: 9;
}
.back image{
  width: 100%;
  height: 100%;
}
.back .webwrap{
  width: 100%;
  height: 100vh;
}
.back .webcontent{
  width: 100%;
  height: 100vh;
}
.joinus{
  width: 90%;
  border-radius: 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #333;
  font-size: 28rpx;
  position: absolute;
  z-index: 99;
  font-weight: bold;
  background-color: #fff;
  bottom: 50rpx;
  box-shadow: 0px 0px 5rpx 1rpx rgba(10,10,10,.2);
  left: 5%;
  font-family: 'Arial Normal', 'Arial';
}
.download{
  width: 100%;
  height: 90rpx;
  position: absolute;
  z-index: 99;
  bottom: 100rpx;
}
.download .relative{
  position: relative;
}
.download .butback{
  width: 94%;
  height: 90rpx;
  position: absolute;
  top: 0rpx;
  left:3%;
  z-index: 100;
}
.download .butback image{
  width: 100%;
  height: 100%;
}
.download .down{
  width: 94%;
  height: 90rpx;
  position: absolute;
  left: 3%;
  z-index: 999;
  text-align: center;
  border-radius: 10rpx;
}
.download .down .downwrap{
  display: inline-block;
  height: 90rpx;
}
.download .down image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 15rpx;
  float: left;
}
.download .down .title{
  height: 90rpx;
  font-size: 28rpx;
  color: #fff;
  margin-left:20rpx;
  line-height: 90rpx;
  float: left;
}