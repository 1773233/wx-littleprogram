/* pages/userinfo/userinfo.wxss */
.wraper{
  width: 100%;
  height: 100vh;
  background-color: #F5F5F5;
  overflow: hidden;
}
.item2{
  -webkit-box-flex:2;
  -webkit-flex:2;
  flex:2;
  text-align: center;
  padding: 0px;
}
.item3{
  -webkit-box-flex:3;
  -webkit-flex:3;
  flex:3;
  text-align: center;
  padding: 0px;
}
.item4{
  -webkit-box-flex:4;
  -webkit-flex:4;
  flex:4;
  text-align: center;
  padding: 0px;
}
.item5{
  -webkit-box-flex:5;
  -webkit-flex:5;
  flex:5;
  text-align: center;
  padding: 0px;
}
.item6{
  -webkit-box-flex:6;
  -webkit-flex:6;
  flex:6;
  text-align: center;
  padding: 0px;
}
.funcionwrap{
  width: 100%;
  margin-top: 20rpx;
  box-shadow: 0px 0px 5px #ddd;
}
.funcionwrap .weui-flex{
  height: 100rpx;
  background-color: #fff;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
}
.funcionwrap .weui-flex.bordernone{
  border: none;
  margin-bottom: 20rpx;
}
.funcionwrap .title{
  text-align: left;
  text-indent: 20rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #333;
}
.funcionwrap .useravatar{
  width:90rpx;
  height: 90rpx;
  margin-top: 5rpx;
  float: right;
  border-radius: 45rpx;
  margin-right: 40rpx;
}
.funcionwrap .infovalue{
  height: 100rpx;
  width: 100%;
  text-align: right;
  font-size: 28rpx;
  color: #999;
  line-height: 100rpx;
}
.funcionwrap .highlight{
  color: #666;
}
.funcionwrap .userconfirm{
  padding: 2rpx 8rpx;
  border: 1rpx solid #ddd;
  font-size: 24rpx;
}
.funcionwrap .arrowright{
  width: 12rpx;
  height:26rpx;
  margin-top: 24rpx;
  float: right;
  margin-right: 15rpx;
}
.funcionwrap .arrowright image{
  width: 100%;
  height: 100%;
}
.btn{
  width: 80%;
  margin-left: 10%;
  height: 90rpx;
  margin-top: 100rpx;
}
.btn .save{
  width: 100%;
  height: 100%;
  line-height: 90rpx;
  text-align:center;
  color: #fff;
  background-color: #131426;
  border: none;
  font-size: 26rpx;
  border-radius: 5rpx;
  box-shadow: 0px 0px 5px 1px #ddd;
}