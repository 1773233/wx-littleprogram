/* pages/invoicemanage/invoicemanage.wxss */
page{
  background-color: #f5f5f5;
}
.wraper{
  width: 100%;
  height: auto;
  padding-bottom: 100rpx;
  background-color: #f5f5f5;
}
.item2{
  -webkit-box-flex:2;
  -webkit-flex:2;
  flex:2;
  text-align: center;
  padding: 0px;
}
.item3{
  -webkit-box-flex:3;
  -webkit-flex:3;
  flex:3;
  text-align: center;
  padding: 0px;
}
.item4{
  -webkit-box-flex:4;
  -webkit-flex:4;
  flex:4;
  text-align: center;
  padding: 0px;
}
.item5{
  -webkit-box-flex:5;
  -webkit-flex:5;
  flex:5;
  text-align: center;
  padding: 0px;
}
.item6{
  -webkit-box-flex:6;
  -webkit-flex:6;
  flex:6;
  text-align: center;
  padding: 0px;
}
.nodata{
  width: 100%;
  height: 80vh;
  text-align: center;
}
.nodata image{
  width: 180rpx;
  height: 200rpx;
  margin-top: 30vh;
  border-radius: 50rpx;
}
.nodata .tipinfo{
  font-size: 28rpx;
  color: #999;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  text-align: center;
}
.nav{
  width: 100%;
  height: 80rpx;
  background-color: #131426;
  text-align: right;
  margin-bottom: 20rpx;
  box-shadow: 0px 1rpx 5rpx 1rpx #eee;
}
.nav .sqjl{
  color: #fff;
  font-size: 30rpx;
  letter-spacing: 2rpx;
  line-height: 80rpx;
  padding-right: 50rpx;
}
.orderitemwrap{
  width: 94%;
  margin-left: 3%;
  background-color: white;
  border-radius: 15rpx;
  overflow: hidden;
  margin-bottom: 25rpx;
  border-bottom: 1rpx solid #eee;
}
.orderitemwrap .title{
  height: 90rpx;
  width:100%;
}
.orderitemwrap .ordertype{
  height: 60rpx;
  margin-top: 15rpx;
}
.orderitemwrap .funcicon{
  width: 40rpx;
  height: 40rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
  float: left;
}
.orderitemwrap .funcicon image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.orderitemwrap .ordertypename{
  line-height: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
  color: #333;
  float: left;
  font-size: 30rpx;
}
.orderitemwrap .distance{
  line-height: 90rpx;
  text-align: center;
  color: #fe8702;
  font-size: 30rpx;
}
.orderitemwrap .addressinfo{
  width: 100%;
  overflow: hidden;
  border-top: 1rpx dashed #ccc;
  border-bottom: 1rpx dashed #ccc;
}
.orderitemwrap .addressinfo .weui-flex{
  height: auto;
}
.orderitemwrap .addressicon{
  width: 36rpx;
  height: 36rpx;
  margin: 17rpx auto;
}
.orderitemwrap .addressicon image{
  width: 100%;
  height: 100%;
}
.orderitemwrap .addressdetail{
  margin-top: 20rpx;
  line-height: 40rpx;
  text-align: left;
  font-size: 30rpx;
  color: #444;
}
.orderitemwrap .message{
  line-height: 70rpx;
  text-align: left;
  font-size: 24rpx;
  color: #999;
  text-indent: 36rpx;
}
.orderitemwrap .orderinfo{
  width: 100%;
  overflow: hidden;
}
.orderitemwrap .orderinfo .weui-flex{
  height: 80rpx;
}
.orderitemwrap .infotitle{
  height: 80rpx;
  line-height: 80rpx;
  color: #111;
  text-align: left;
  font-size: 30rpx;
  text-indent: 36rpx;
}
.orderitemwrap .infovalue{
  height: 80rpx;
  line-height: 80rpx;
  color: #111;
  text-align: right;
  padding-right: 20rpx;
  font-size: 30rpx;
}
.orderitemwrap .infovalue.colorred{
  color: #cc0000;
}
.orderitemwrap .orderstate{
  height: 100rpx;
  width: 100%;
  box-sizing: border-box;
  border-top: 1rpx dashed #ccc;
}
.orderitemwrap .orderdate{
  line-height: 100rpx;
  font-size: 24rpx;
  text-align: left;
  text-indent: 36rpx;
  color: #999;
}
.orderitemwrap .controlbtn{
  width:140rpx;
  height: 60rpx;  
  border-radius: 10rpx;
  color: white;
  font-size: 24rpx;
  text-align: center;
  line-height: 60rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  float: right;
  margin-right: 10rpx;
}
.orderitemwrap .controlbtn.fullcolor{
  background-color: #fe8702;
}
.orderitemwrap .controlbtn.emptyborder{
  background-color: #fff;
  border:1px solid #fe8702;
  color: #fe8702;
}

.wraper .bottomfunc{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0rpx;
  background-color: #fff;
  box-shadow: 0rpx -1rpx 5rpx 1rpx #ddd;
}
.wraper .bottomfunc .funcitem{
  height: 100rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 100rpx;
}
.wraper .bottomfunc .funcitem image{
  width: 40rpx;
  height: 40rpx;
  margin-top: 30rpx;
  margin-left: 20rpx;
}
.wraper .bottomfunc .funcitem text{
  font-size: 30rpx;
  line-height: 100rpx;
  height: 100rpx;
  text-indent: 20rpx;
  display: inline-block;
  vertical-align: top;
}
.wraper .bottomfunc .funcitem .highlight{
  color: #fe8702;
}
.wraper .bottomfunc .funcitem .applyinvoice{
  width: 80%;
  height: 70rpx;
  margin-top: 15rpx;
  background-color: #131426;
  border-radius: 10rpx;
  color: #fff;
  font-size: 26rpx;
  line-height: 70rpx;
  text-align: center;
}
.wraper .bottomfunc .funcitem .applyinvoice.disable{
  background-color: #ddd;
}