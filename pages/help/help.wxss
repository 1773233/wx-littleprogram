/* pages/help/help.wxss */
.wraper{
  width: 100%;
  height: 100vh;
  box-sizing:border-box;
  background-color: #f2f2f2;
}
.item2{
  -webkit-box-flex:2;
  -webkit-flex:2;
  flex:2;
  text-align: center;
  padding: 0px;
}
.item3{
  -webkit-box-flex:3;
  -webkit-flex:3;
  flex:3;
  text-align: center;
  padding: 0px;
}
.item4{
  -webkit-box-flex:4;
  -webkit-flex:4;
  flex:4;
  text-align: center;
  padding: 0px;
}
.item5{
  -webkit-box-flex:5;
  -webkit-flex:5;
  flex:5;
  text-align: center;
  padding: 0px;
}
.item6{
  -webkit-box-flex:6;
  -webkit-flex:6;
  flex:6;
  text-align: center;
  padding: 0px;
}
.title{
  height: 100rpx;
  line-height: 100rpx;
  text-align: left;
  text-indent: 20rpx;
  font-size: 30rpx;
  color: #fe8703;
}
.helpitem{
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  height: 100rpx;
  box-sizing: border-box;
}
.helpitemtit{
  color: #333;
  line-height: 100rpx;
  height: 100rpx;
  text-align: left;
  text-indent: 20rpx;
  font-size: 28rpx;
}
.arrowright{
  width: 12rpx;
  height:26rpx;
  margin-top: 28rpx;
  float: right;
  margin-right: 15rpx;
}
.arrowright image{
  width: 100%;
  height: 100%;
}
.btn{
  width: 80%;
  margin-left: 10%;
  text-align: center;
  height: 100rpx;
  margin-top: 50rpx;
  border-radius: 10rpx;
  background-color: #131426;
  color: #fff;
  font-size: 30rpx;
  line-height: 100rpx;
}
.wraper .noaddress{
  width: 100%;
  height: 70vh;
  text-align: center;
}
.wraper .noaddress .nodata{
  width: 180rpx;
  height: 200rpx;
  margin-top: 35vh;
  border-radius: 50rpx;
}
.wraper .noaddress .tipinfo{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}