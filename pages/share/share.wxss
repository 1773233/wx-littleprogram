  height: 90rpx;
  margin: 30rpx auto;
  margin-bottom: 20rpx;
}
.btn .invite{
  width: 100%;
  height:90rpx;
  line-height: 90rpx;
  text-align: center;
  color: white;
  font-size: 28rpx;
  border-radius: 15rpx;
  background-color: #131426;
}
.prize{
  display: inline-block;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #333;
}
.prize .textskyblue{
  margin: 0px;
}



.custompicker{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 996;
  display: none; 
}
.custompicker.showpicker{
  display: block;
}
.custompicker .emptyarea{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 997;
  background: rgba(0, 0, 0, 0.7);
}
.custompicker .pickerwraper{
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  background: white;
  transition: all 0.4s ease;
  z-index: 999;
  padding-bottom: 30rpx;
}
.custompicker .pickercontent{
  width: 100%;
  overflow: hidden;
}
.custompicker .title{
  height: 100rpx;
  text-align: center;
  width: 100%;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;
}
.custompicker .pickertitle{
  font-size: 34rpx;
  line-height: 100rpx;
  color: #333;
}
.custompicker .pickercancel{
  font-size: 30rpx;
  line-height: 100rpx;
  color: #333;
  cursor: pointer;
}
.custompicker .pickeritems{
  width: 100%;
  overflow: hidden;
}
.custompicker .pickeritemswrap{
  width: 100%;
  height: auto;
}
.custompicker .shareitem{
  width: 33.33%; 
  height: 150rpx;
  float: left;
  margin:20rpx 0rpx;
}
.custompicker .shareitem .shareitemwrap{
  width: 150rpx;
  height: 130rpx;
  position: relative;
  text-align: center;
  left:50%;
  margin: 0 -50rpx;
}
.custompicker .shareitem .shareitemwrap .backwrap{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 0px;
  left: 50%;
  margin-left: -50rpx;
}
.custompicker .shareitem .shareitempic{
  width: 50rpx;
  height: 50rpx;
  border-radius: 5rpx;
  margin: 25rpx auto;
}
.custompicker .shareitem .shareitemname{
  font-size: 24rpx;
  color: #333;
  line-height: 30rpx;
  height: 30rpx;
}
.custompicker .clearfloat{
  display: none;
}
.custompicker .clearfloat.show{
  display: block;
}