.background{
  width: 100%;
  height: auto;
  position: relative;
  opacity: 1;
}
.hide{
  opacity: 0;
}
.background .backimg{
  width: 100%;
  height: auto;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
}
.background .backimg image{
  width: 100%;
}
.background .qrcodewrap{
  width: 86%;
  height: auto;
  position: relative;
  left: 7%;
  padding-bottom:65rpx;
}
.background .qrcodewrap .qrback{
  width: 100%;
  position: absolute;
  top: 40rpx;
  z-index: 99;
}
.background .qrcodewrap .qrcodetxtwrap{
  position: relative;
  top: 0rpx;
  width: 100%;
  z-index: 111;
  text-align: center;
}
.background .descwrap{
  width: 100%;
  height: auto;
  position: relative;
  z-index: 999;
}
.background .qrcodewrap .qrcodetxtwrap .title{
  width: 100%;
  text-align: center;
  height: 120rpx;
  line-height: 120rpx;
  font-weight: bold;
}
.background .qrcodewrap .qrcodetxtwrap .smalltitle{
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
}
.background .qrcodewrap .qrcodetxtwrap .qrcodeimg{
  width: 40%;
  height: auto;
}
.background .qrcodewrap .qrcodetxtwrap .sharenow{
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  color: #fff;
  background-color: #131426;
  border-radius: 30rpx;
  margin:54rpx auto;
}
.textsmall{
  text-align: center;
  line-height: 80rpx;
  color: #999;
  font-size: 26rpx;
}
.textbig{
  text-align: center;
  line-height: 60rpx;
  color: #555;
  font-size: 32rpx;
}
.smalltextwraper{
  display: inline-block;
}
.textgray{
